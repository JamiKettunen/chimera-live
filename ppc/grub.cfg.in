# kernel is specified on one line, as petitboot does not handle line
# escapes correctly, so some parameters wouldn't be passed otherwise

set pager="1"
set timeout="10"
set default="chimera-live"

menuentry "@@BOOT_TITLE@@ @@KERNVER@@ (@@ARCH@@)" --id chimera-live {
    linux /live/vmlinux boot=live nonetworking init=/usr/bin/init loglevel=4 @@BOOT_CMDLINE@@
    initrd /live/initrd
}
